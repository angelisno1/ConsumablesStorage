<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:background="@drawable/login_bg1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/login_logo"/>

            <ImageView
                android:id="@+id/iv_sd_no_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="20.0dip"
                android:scaleType="fitXY"
                android:spacing="6.0dip"
                android:src="@drawable/user_default_pic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/logineditetext_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_input_user"/>

                <EditText
                    android:id="@+id/et_userName"
                    style="@style/et_style_login"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/imageView1"
                    android:background="@android:color/transparent"
                    android:hint="请输入账号"
                    android:maxLength="11"
                    android:paddingStart="10.0dip"
                    android:text="400228"
                    android:textSize="18.0sp"/>

                <Button
                    android:layout_width="48.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10.0dip"
                    android:background="@drawable/login_history_down_arrow_bg"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/DividerColor"/>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="fill_parent"
                android:layout_height="46.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/logineditetext_bg">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_input_password"/>
                <EditText
                    android:id="@+id/et_passWord"
                    style="@style/et_style_login"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/imageView2"
                    android:background="@color/LoginEditBg"
                    android:hint="请输入登录密码"
                    android:inputType="textPassword"
                    android:paddingLeft="10.0dip"
                    android:text="123456"
                    android:textSize="18.0sp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llsub03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="30.0dip">
            <Button
                android:id="@+id/btn_login"
                style="@style/btn_style_white"
                android:layout_width="0dp"
                android:layout_height="50.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/loginbtnbg"
                android:text="@string/login_btn"
                android:textColor="@color/WHITE"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
