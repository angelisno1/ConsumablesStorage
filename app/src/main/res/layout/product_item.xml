<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="12dp"
    app:contentPadding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_patientHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/storage_out_logo" />

        <RelativeLayout
            android:id="@+id/rl_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_patientHead"
            android:layout_toRightOf="@id/iv_patientHead" >

            <TextView
                android:id="@+id/tv_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="产品名称" />

            <TextView
                android:id="@+id/tv_outNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_productName"
                android:text="6床"
                android:textColor="#5AD0B9" />

            <TextView
                android:id="@+id/tv_productSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="产品规格"
                android:textColor="#C7C8C7"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_up"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_patientHead"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="慢性胃癌晚期，每天透析治疗每天观察治疗方法"
                android:textColor="#6D6D6D" />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_middle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_patientHead"
            android:layout_marginLeft="5dp"
            android:text="产品价格："
            android:textColor="#6D6D6D" />

        <TextView
            android:id="@+id/tv_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_below="@id/ll_middle"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_age"
            android:textColor="#B0B1B0" />
    </RelativeLayout>

</android.support.v7.widget.CardView >