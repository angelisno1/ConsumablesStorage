<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cyan_a700">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出库产品"
                android:textColor="@color/WHITE"
                android:textSize="20sp" />
        </android.support.v7.widget.Toolbar>
        <com.miguelcatalan.materialsearchview.MaterialSearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout style="@style/ll_stock_form">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            style="@style/rl_stock_input">

            <TextView
                android:id="@+id/tv_productTitle"
                style="@style/tv_product_info"
                android:text="产品名称" />

            <View
                android:id="@+id/v_product_split"
                style="@style/v_product_split"
                android:layout_toRightOf="@id/tv_productTitle" />

            <TextView
                android:id="@+id/tv_productName"
                style="@style/tv_product_content"
                android:layout_toRightOf="@id/v_product_split" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/ll_stock_form">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            style="@style/rl_stock_input">

            <TextView
                android:id="@+id/tv_commonName_title"
                style="@style/tv_product_info"
                android:text="通用名称" />

            <View
                android:id="@+id/v_product_split1"
                style="@style/v_product_split"
                android:layout_toRightOf="@id/tv_commonName_title" />

            <TextView
                android:id="@+id/tv_commonName_content"
                style="@style/tv_product_content"
                android:layout_toRightOf="@id/v_product_split1" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/ll_stock_form">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            style="@style/rl_stock_input">

            <TextView
                android:id="@+id/tv_spec_title"
                style="@style/tv_product_info"
                android:text="规格型号" />

            <View
                android:id="@+id/v_product_split2"
                style="@style/v_product_split"
                android:layout_toRightOf="@id/tv_spec_title" />

            <TextView
                android:id="@+id/tv_spec_content"
                style="@style/tv_product_content"
                android:layout_toRightOf="@id/v_product_split2" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/ll_stock_form">

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            style="@style/rl_stock_input">

            <TextView
                android:id="@+id/tv_brand_title"
                style="@style/tv_product_info"
                android:text="产品品牌" />

            <View
                android:id="@+id/v_product_split3"
                style="@style/v_product_split"
                android:layout_toRightOf="@id/tv_brand_title" />

            <TextView
                android:id="@+id/tv_brand_content"
                style="@style/tv_product_content"
                android:layout_toRightOf="@id/v_product_split3" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/ll_stock_form">

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            style="@style/rl_stock_input">

            <TextView
                android:id="@+id/tv_Manufacturer_title"
                style="@style/tv_product_info"
                android:text="生产企业" />

            <View
                android:id="@+id/v_product_split4"
                style="@style/v_product_split"
                android:layout_toRightOf="@id/tv_Manufacturer_title" />

            <TextView
                android:id="@+id/tv_Manufacturer_content"
                style="@style/tv_product_content"
                android:layout_toRightOf="@id/v_product_split4" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/ll_stock_form">

        <RelativeLayout
            android:id="@+id/relativeLayout6"
            style="@style/rl_stock_input">

            <TextView
                android:id="@+id/tv_distributor_title"
                style="@style/tv_product_info"
                android:text="    经销商" />

            <View
                android:id="@+id/v_product_split5"
                style="@style/v_product_split"
                android:layout_toRightOf="@id/tv_distributor_title" />

            <TextView
                android:id="@+id/tv_distributor_content"
                style="@style/tv_product_content"
                android:layout_toRightOf="@id/v_product_split5" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/ll_stock_form">

        <RelativeLayout
            android:id="@+id/relativeLayout7"
            style="@style/rl_stock_input">

            <TextView
                android:id="@+id/tv_price_title"
                style="@style/tv_product_info"
                android:text="产品单价" />

            <View
                android:id="@+id/v_product_split6"
                style="@style/v_product_split"
                android:layout_toRightOf="@id/tv_price_title" />

            <TextView
                android:id="@+id/tv_price_content"
                style="@style/tv_product_content"
                android:layout_toRightOf="@id/v_product_split6" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/ll_stock_form">

        <RelativeLayout
            android:id="@+id/relativeLayout8"
            style="@style/rl_stock_input">

            <TextView
                android:id="@+id/tv_outtotal_title"
                style="@style/tv_product_info"
                android:text="出库数量" />

            <View
                android:id="@+id/v_product_split7"
                style="@style/v_product_split"
                android:layout_toRightOf="@id/tv_outtotal_title" />

            <EditText
                android:id="@+id/tv_outtotal_content"
                style="@style/tv_product_content"
                android:layout_toRightOf="@id/v_product_split7" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/len_4"
        android:layout_marginTop="@dimen/len_4"
        android:orientation="horizontal">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="@dimen/len_52"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="出库"
            android:textColor="@color/white_alpha_224"
            app:gTouchEffect="ripple" />

    </LinearLayout>
</LinearLayout>